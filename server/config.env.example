# Database Configuration
MONGODB_URI=mongodb://localhost:27017/qced_development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production_at_least_32_characters
JWT_EXPIRE=7d
JWT_ISSUER=qced-api
JWT_AUDIENCE=qced-client

# Server Configuration
PORT=5000
NODE_ENV=development

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30
SESSION_TIMEOUT=86400000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true
RATE_LIMIT_SKIP_FAILED=false

# Email Configuration (Required for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@qassimchamber.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_CONSOLE=true
LOG_FILE=false
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Admin Default Credentials (Development only)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=admin123
